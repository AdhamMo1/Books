@model Book
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary mt-3">Book Details</h1>
<hr />

<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="/hard-by-a-great-forest-hardback-book-jacket.jpg" class="card-img" alt="book-img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
               <div class="border border-primary rounded-right p-2 d-flex justify-content-between align-items-center ">
                    <h4 class="card-title">@Model.Title</h4>
                    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="icofont-tools"></i>Edit</a>
               </div>
        <p class="card-text">@Model.Description</p>
        <h6 class="card-text">Category : @Model.Category.Name</h6>
        <p class="card-text"><small class="text-muted">Author : @Model.Author</small></p><br />
        <p class="card-text"><small class="text-muted">@Model.AddedOn</small></p>
      </div>
    </div>
  </div>
</div>
<div>
    <a class="btn btn-danger" asp-action="Index"><i class="icofont-exit"></i>Back</a>
</div>